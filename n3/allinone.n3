( ( cap:Milestone_0gl7st9 state:Occurred 'observation' ) ) a cm:Trace .

{ ?prior cm:run ?final } 
<= {
    # "run prior" log:trace ?prior .
    
    ?prior cm:step ?next .
    # "run next" log:trace ?next .

    ( ?prior ?next ) cm:ctu ?final .
} .

{ ?prior cm:step ?next } 
<= {
    ( ?new 
    {
        ?item a cm:PlanItem .
        ( ?item ?prior ) cm:to ?new
    }    
    ?news ) log:collectAllIn _:t .

    ?news log:conjunction ?next .
} .

# TODO requires comparing entire graph terms with each other
# can't we (easily) detect changes in the collectAllIn loop??
{ ( ?prior ?prior ) cm:ctu ?prior }
<= {
    true log:callWithCut true
} .

{ ( ?prior ?next ) cm:ctu ?final }
<= {
    # "run ctu" log:trace "ctu" .
    ?next cm:run ?final
} .


{ ( ?trace ?states ) cm:runThroughTrace ?final } 
<= {
    ?trace e:firstRest ( ( ?item ?type ?reason ) ?trace2 ) .
    
    ( ?item ?states ) state:isIn ( ?t ?obs0 ) .
    ( ?item ?states ) state:createNew ( ( ?type ?reason ) ?obs ) .
    # "obs" log:trace ?obs .

    # TODO abstract this in state.n3
    # need to REPLACE at same position, not append
    # (else, out will be different literal, and continue with superfluous reasoning run)
    ( ?states ?obs0 ) graph:difference ?states2 .
    ( ?states2 ?obs ) log:conjunction ?states3 .

    ?states3 cm:run ?states4 .

    ( ?trace2 ?states4 ) cm:runThroughTrace ?final
} .

{ ( () ?states ) cm:runThroughTrace ?states } <= {} . 

{
    _:t state:init ?init .
    # "init" log:trace ?init .
    ?init cm:run ?next .
    
    ?trace a cm:Trace .
    ( ?trace ?next ) cm:runThroughTrace ?final .
} => {
    _:t :out ?final .
} .