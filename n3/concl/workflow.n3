@prefix in: <http://n3.w3c.org/builtin/input#> .
@prefix list: <http://www.w3.org/2000/10/swap/list#> .
@prefix log: <http://www.w3.org/2000/10/swap/log#> .
@prefix math: <http://www.w3.org/2000/10/swap/math#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix e: <http://eulersharp.sourceforge.net/2003/03swap/log-rules#>.
@prefix cond: <http://rdf.org/cond#> .
@prefix state: <http://rdf.org/state#> .
@prefix cm: <http://rdf.org/cmmn#> .

# - sentries

# -- entry
{
    ?planItem cm:hasSentry ?sentry .
    ?sentry a cm:EntrySentry .
    
    ( { ?sentry cm:hasPlanItemPart ?planItemPart } { ?planItemPart!cm:hasSource state:isIn state:Completed } )
        log:forAllIn _:t .

    ( { ?sentry cm:hasCondition ?cond } { ?cond cond:conditionMet true } )
        log:forAllIn _:t .

    ?planItem state:transit ( state:Ready state:Active "sentryFired" ?state ) .

} => {
    ?planItem state:in ?state
} .

{
    ?planItem a cm:PlanItem .
    ( ?sentry { ?planItem cm:hasSentry ?sentry . ?sentry a cm:EntrySentry } () ) log:collectAllIn _:t .
    
    ?planItem state:transit ( state:Ready state:Active "noSentries" ?state ) .

} => {
    ?planItem state:in ?state
} .

# -- exit

# TODO

# - init

{
    ?planItem a cm:PlanItem . # tasks, stages, milestones
    _:t log:notIncludes {
        ?stage cm:hasChild ?planItem
    } .

    ?planItem state:transit ( state:Inactive state:Ready "notInStage" ?state ) .

} => {
    ?planItem state:in ?state
} .

# - stages

{
    ?stage state:isIn state:Active .
    ?stage cm:hasChild ?child .

    ?child state:transit ( state:Inactive state:Ready "inActiveStage" ?state ) .

} => {
    ?child state:in ?state
} .
